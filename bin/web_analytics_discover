#!/usr/bin/env ruby

require 'fileutils'
require 'uri'
require 'optparse'

require 'web_analytics_discovery'
include WebAnalyticsDiscovery

class AnalyticsGrabber
	def self.run(url)
		r = {
			:alexa => Alexa.new.run(url),
			:googleanalytics => GoogleAnalytics.new.run(url),
			:liveinternet => LiveInternet.new.run(url),
			:mailru => MailRu.new.run(url),
			:openstat => Openstat.new.run(url),
			:quantcast => Quantcast.new.run(url),
			:rambler => Rambler.new.run(url),
			:tns => TNS.new.run(url),
			:yandexmetrika => YandexMetrika.new.run(url),
		}
	end

	def self.pp(url)
		r = run(url)
		print_line ['', 'id', 'v/day', 's/day', 'pv/day', 'v/mon', 's/mon', 'pv/mon']
		r.each_pair { |service, res|
			next unless res
			print_line [
				service,
				res[:id],
				res[:visitors_day],
				res[:visits_day],
				res[:pv_day],
				res[:visitors_mon],
				res[:visits_mon],
				res[:pv_mon],
			]
		}
	end

	def self.print_line(a)
		printf '%-20s', a.shift
		printf '|%24s', a.shift
		a.each { |x|
			printf '|%11s', x || 'N/A'
		}
		puts
	end
end

options = {}
OptionParser.new { |opts|
	opts.banner = "Usage: #{__FILE__} [options] <urls>"

#	opts.on('-v', '--[no-]verbose', 'Verbose logging') { |v| options[:verbose] = v }

	opts.on_tail('-h', '--help', 'Show this message') { puts opts; exit }
}.parse!

ARGV.each { |a| AnalyticsGrabber.pp(a) }
